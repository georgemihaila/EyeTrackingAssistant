<UserControl x:Class="STeM.Views.GazeArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STeM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid x:Name="LayoutRoot">
        <Border x:Name="Border" BorderThickness="1" Width="{Binding ActualWidth, ElementName=LayoutRoot}"   Height="{Binding ActualHeight, ElementName=LayoutRoot}" BorderBrush="Red"/>

    </Grid>
</UserControl>
